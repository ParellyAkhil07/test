
public class PrintRecursively {

    // Method to print items in the list using recursion
    public static void printRecursively(List<Integer> lst) {
        // Base case: if the list is empty, return
        if (lst.isEmpty()) {
            return;
        }

        // Print the first element of the list
        System.out.println(lst.get(0));

        // Recursive call with the rest of the list
        printRecursively(lst.subList(1, lst.size()));
    }

    public static void main(String[] args) {
        // Example usage of the printRecursively method
        printRecursively(List.of(1, 2, 3));

        // Simple test to check if the method works correctly
        if (testPrintRecursively()) {
            System.out.println("ALL TESTS PASSED");
        }
    }

    // Test method to verify the printRecursively method
    public static boolean testPrintRecursively() {
        // Capture the output of the printRecursively method
        java.io.ByteArrayOutputStream outContent = new java.io.ByteArrayOutputStream();
        System.setOut(new java.io.PrintStream(outContent));

        // Call the method with a test list
        printRecursively(List.of(1, 2, 3));

        // Expected output
        String expectedOutput = "1\n2\n3\n";

        // Reset the standard output
        System.setOut(new java.io.PrintStream(new java.io.FileOutputStream(java.io.FileDescriptor.out)));

        // Return true if the output matches the expected output
        return outContent.toString().equals(expectedOutput);
    }