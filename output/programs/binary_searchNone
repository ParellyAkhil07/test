
public class BinarySearch {

    // Using binary search, find val in range 1-100. Return # of guesses.
    public static int binarySearch(int val) {
        // Ensure the value is within the valid range
        if (val <= 0 || val >= 101) {
            throw new IllegalArgumentException("Val must be between 1-100");
        }

        int numGuesses = 0;
        int guess = 0;
        int low = 0;
        int high = 101;

        // Continue searching until the guess matches the value
        while (guess != val) {
            numGuesses++;
            guess = (high - low) / 2 + low;

            if (guess > val) {
                high = guess;
            } else if (guess < val) {
                low = guess;
            }
        }

        return numGuesses;
    }

    public static void main(String[] args) {
        // Test cases to verify the binary search function
        System.out.println(binarySearch(50)); // Expected output: 1
        System.out.println(binarySearch(25)); // Expected output: 2
        System.out.println(binarySearch(75)); // Expected output: 2
        System.out.println(binarySearch(31) <= 7); // Expected output: true

        // Find the maximum number of guesses needed for any number in the range
        int maxGuesses = 0;
        for (int i = 1; i <= 100; i++) {
            maxGuesses = Math.max(maxGuesses, binarySearch(i));
        }
        System.out.println(maxGuesses); // Expected output: 7

        System.out.println("ALL TESTS PASSED");
    }